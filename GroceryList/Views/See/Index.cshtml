@model GroceryList.ViewModels.SeeIngredientsViewModel
@{
    <h1 style="text-align:center;">Your Grocery List</h1>
    //TODO -- add x glyphicon that will cross-out the item while you are shopping
    //TODO -- if there are no items in your grocery list, suggest planning your week with a link to that page
}

@if (!Model.IsPlanned)
{
    <div style="text-align: center; ">
        <h5>You have no items yet</h5>
    </div>
    <div style="text-align: center; ">
        <h5>Plan your week's meals <a asp-controller="Plan" asp-action="Index">here!</a></h5>
    </div>
    
}

else
{
    <form asp-controller="See" asp-action="RemoveIngredient" method="post">
        <table align="center" style="margin-bottom: 10px; ">
            @foreach (Ingredient ingredient in Model.Ingredients)
            {
                @if (ingredient.Name != "None" && ingredient.Name != "" && ingredient.Name != null)
                {
                    <tr>
                        <td style="margin-right: 7px;">
                            @ingredient.Name

                        </td>
                        <td style="padding-left: 7px;">
                        
                            <input type="checkbox" name="IngredientIDs" value="@ingredient.ID" />
                            <span class="glyphicon glyphicon-shopping-cart"></span>
                                               
                        </td>
                    </tr>

                }
           
            } 
        </table>
        <div style="text-align: center;">
            <input style=" text-align:center; " type="submit" value="Remove Ingredients" />
        </div>
    
    </form>
}


